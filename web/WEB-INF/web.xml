<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>play.Register</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>play.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>JoinToRoom</servlet-name>
        <servlet-class>play.JoinToRoom</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateRoom</servlet-name>
        <servlet-class>play.CreateRoom</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>JoinRoom</servlet-name>
        <servlet-class>play.JoinRoom</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>JoinToRoom</servlet-name>
        <url-pattern>/JoinToRoom</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateRoom</servlet-name>
        <url-pattern>/CreateRoom</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>JoinRoom</servlet-name>
        <url-pattern>/JoinRoom</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
